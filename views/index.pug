extends layout

block content 
  div(id="post")
    form(action="/" method="post")
      input(type="text" name="yadda" placeholder="Besked")
      button yadda!
  div(id="timeline")
    each yadda in yaddas
      if !yadda.replyTo 
        p #{yadda.username} #{yadda.yadda}
        p #{yadda.created}
        p 
          img(src='/users/getimage/' + yadda.username)
        button
          a(href="/replyYadda/" + yadda._id) Reply
